%%-*- mode:erlang -*-

%% pose

{lib_dirs, ["deps"]}.

{erl_opts, [ {i, "deps"} ]}.

{edoc_opts, [
    {preprocess, true},
    {includes, ["doc/deps"]},
    {doclet, multi_doclet},
    {skip_libs, ["deps", "dev"]},
    {doclet_list, [edown_doclet, edoc_doclet]},
    {top_level_readme,
            {"./README.md", "http://github.com/beadsland/pose"}},
    {todo, true}
    ]}.

% pose can't depend on superl (circular relationship)

{deps, [
    {parse_trans, ".*",
        {git, "git://github.com/uwiger/parse_trans", {branch, master}}}
    ]}.